<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.rootdown.dev.nasaneorebase.ui.feature_nasa_media.MediaViewModel" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        tools:context="ui.feature_nasa_media.MediaFragment">

        <com.airbnb.epoxy.EpoxyRecyclerView
            android:id="@+id/rvMedia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:itemBinding="@{viewModel.viewState.getItemBinding(viewModel)}"
            app:items="@{viewModel.viewState.items}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:spanCount="1" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressBarMedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:indicatorColor="@color/primaryVariant"
            app:layout_constraintBottom_toTopOf="@+id/rvMedia"
            app:layout_constraintEnd_toStartOf="@+id/rvMedia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>